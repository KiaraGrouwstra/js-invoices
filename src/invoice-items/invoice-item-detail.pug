.invoice(*ngIf="item")
  md-card
    a([routerLink]="['/invoices/' + item.invoice_id + '/items/' + item.id]")
      md-card-title
        | Item # {{item.id}}
    md-card-subtitle
      | Invoice: # {{item.invoice_id}}
    //- md-card-subtitle
    //-   | Product: # {{item.product_id}}
    md-divider
    md-card-content
      form
        md-input(
          placeholder="quantity"
          '[(ngModel)]'="item.quantity"
          '[ngModelOptions]'="{standalone: true}"
          '(ngModelChange)'="update($event)"
        )
      form
        select(
          *ngIf="products | async"
          '[(ngModel)]'=`item.product_id`
          '[ngModelOptions]'="{standalone: true}"
          '(ngModelChange)'="update($event)"
        )
          option(
            *ngFor='let product of products | async'
            '[value]'='product.id'
          )
            | {{product.name}}
    md-divider
    md-card-content
      //- p
      //-   | Quantity: {{item.quantity}}
      p
        | Revenue: {{item.revenue}}
    md-divider
    md-card-actions
      //- button(md-raised-button, color='accent', [routerLink]="['/invoices/' + item.invoice_id + '/items' + item.id + '/edit']") Edit
      button(md-raised-button, color='warn', (click)="remove($event)") Delete
