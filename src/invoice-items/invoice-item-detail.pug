.invoice(*ngIf="item")
  md-card
    a([routerLink]="['/invoices/' + item.invoice_id + '/items/' + item.id]")
      md-card-title
        | {{"Item" | translate}} # {{item.id}}
    md-card-content
      form
        md-input(
          placeholder="{{'quantity' | translate}}"
          '[(ngModel)]'="item.quantity"
          '[ngModelOptions]'="{standalone: true}"
          '(ngModelChange)'="update($event)"
        )
      form.dialog
        select(
          *ngIf="products | async"
          '[(ngModel)]'=`item.product_id`
          '[ngModelOptions]'="{standalone: true}"
          '(ngModelChange)'="update($event)"
        )
          option(
            *ngFor='let product of products | async'
            '[value]'='product.id'
          )
            | {{product.name}}
        span
          button(md-mini-fab (click)="openDialog()")
            md-icon.md-18
              | add
    md-divider
    md-card-content
      p
        | {{"Revenue" | translate}} : {{item.revenue}}
    md-divider
    md-card-actions
      //- button(md-raised-button, color='accent', [routerLink]="['/invoices/' + item.invoice_id + '/items' + item.id + '/edit']") Edit
      button(md-raised-button, color='warn', (click)="openConfirm($event)") {{"Delete" | translate }}
