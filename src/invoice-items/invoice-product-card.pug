.product(*ngIf="product")
  md-card
    md-card-title
        | {{"Add Item" | translate }}
    //- md-card-subtitle
    //-   | ${{product.price}}
    md-divider
    md-card-content
      form
        md-input(
          placeholder="{{'name' | translate }}"
          '[(ngModel)]'="product.name"
          '[ngModelOptions]'="{standalone: true}"
        )
        md-input(
          type="number"
          placeholder="{{'price' | translate }}"
          '[(ngModel)]'="product.price"
          '[ngModelOptions]'="{standalone: true}"
        )
          span(md-prefix) $&nbsp;
    //- md-divider
    //- md-card-content
    //-   p
    //-     | # {{product.id}}
    md-divider
    md-card-actions
      //- button(md-raised-button, color='accent', [routerLink]="['/products/' + product.id + '/edit']") Edit
      button(md-raised-button [disabled]="isDisabled",(click)="dialogRef.close('no')") {{"Cancel" | translate }}
      button(md-raised-button color="primary",(click)="dialogRef.close('yes');create($event)") {{"Confirm" | translate }}
