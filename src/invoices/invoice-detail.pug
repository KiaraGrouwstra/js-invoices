.invoice(*ngIf="invoice")
  md-card
    a([routerLink]="['/invoices/' + invoice.id]")
      md-card-title
        | {{"Invoice" | translate }} # {{invoice.id}}
    //- md-card-subtitle
    //-   | Client: {{invoice.customer_id}}
    md-divider
    md-card-content
      //- edit:
      form
        //- input('[(ngModel)]'="invoice.discount")
        md-input(
          type="number"
          placeholder="{{'discount' | translate }}"
          '[(ngModel)]'="invoice.discount"
          '[ngModelOptions]'="{standalone: true}"
          '(ngModelChange)'="update($event)"
        )
          span(md-suffix) %&nbsp;
      form.dialog
        select(
          *ngIf="customers | async"
          '[(ngModel)]'=`invoice.customer_id`
          '[ngModelOptions]'="{standalone: true}"
          '(ngModelChange)'="update($event)"
        )
          option(
            *ngFor='let customer of customers | async'
            '[value]'='customer.id'
          )
            | {{customer.name}}
        span
          button(md-mini-fab (click)="openDialog()")
            md-icon.md-18
              | add
    md-divider
    md-card-content
      p
        | {{"Total" | translate }}: {{invoice.total}}
    md-card-content(*ngFor="let item of invoice.items")
      invoice-item-detail([item]="item")
    md-divider
    md-card-actions
      button(md-raised-button, color='primary', (click)="create_item($event)") {{"Add Item" | translate }}
      //- button(md-raised-button, color='accent', [routerLink]="['/invoices/' + invoice.id + '/edit']") Edit
      button(md-raised-button, color='warn', (click)="remove($event)")  {{"Delete" | translate }}
